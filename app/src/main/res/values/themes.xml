    <!-- Style for Edit Text -->
    <style name="text_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#00000000</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- Style for Button -->
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_authorization_registration">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">21sp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">40dp</item>
    </style>

    <style name="image_btn_date">
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:src">@drawable/ic_date_black</item>
    </style>


    <!-- Style for Profile -->
    <style name="image_btn_message_profile">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:src">@drawable/ic_messenger_white</item>
    </style>


    <!-- Style for Edit Profile -->




</resources>