<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppNetworkForPhotographers" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.AppNetworkForPhotographers.Authorization" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.AppNetworkForPhotographers.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppNetworkForPhotographers.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppNetworkForPhotographers.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Theme for Toolbar -->
    <!-- app:popupTheme="@style/Theme.AppNetworkForPhotographers.PopupOverlay"-->
    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="toolbar_icon">
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="toolbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">21sp</item>
    </style>


    <!-- Style for EditText -->
    <style name="text_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="edit_text_multiline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lines">6</item>
        <item name="android:minLines">4</item>
        <item name="android:gravity">top|start</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <!-- Style for TextView -->
    <style name="text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- Style for Button -->
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_authorization_registration">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">21sp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">40dp</item>
    </style>

    <style name="image_btn_date">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_date_black</item>
    </style>


    <!-- Style for Profile -->
    <style name="image_btn_message_profile">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:src">@drawable/ic_messenger_white</item>
    </style>


    <!-- Style for Photo -->
    <style name="user_photo_big">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:src">@drawable/ic_profile</item>
    </style>

    <style name="user_photo_small" parent="toolbar_icon">
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_profile</item>
    </style>

    <style name="photo_post_blog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_img_black</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>


    <!-- Style for Post/Blog item -->
    <style name="toolbar_user_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingVertical">1dp</item>
    </style>

    <style name="toolbar_upload_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>

    <style name="img_icon_below">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="img_likes" parent="img_icon_below">
        <item name="android:src">@drawable/ic_likes_black</item>
    </style>

    <style name="img_comments" parent="img_icon_below">
        <item name="android:src">@drawable/ic_comments_black</item>
    </style>

    <style name="text_below">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>